<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <!--whatever you want in the background, here i preferred solid white -->
        <shape android:shape="rectangle">
            <gradient android:startColor="#0D000000" android:endColor="#0D000000"></gradient>
            <corners android:radius="10dp"></corners>

        </shape>
    </item>

    <!--the shadow comes from here-->
    <item
        android:bottom="5dp"
        android:drawable="@drawable/inputs_bg"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">

    </item>


</layer-list>